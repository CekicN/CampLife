<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD CAMP MARKER"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/orange_700"
                ></TextView>

            <EditText
                android:id="@+id/addmarker_campname"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/orange_border"
                android:drawableLeft="@drawable/camp"
                android:drawablePadding="8dp"
                android:hint="Camp name"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/grey" />

            <EditText
                android:id="@+id/addmarker_phone"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/orange_border"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawablePadding="8dp"
                android:hint="Phone"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/grey" />

            <EditText
                android:id="@+id/addmarker_address"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/orange_border"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:drawablePadding="8dp"
                android:hint="Address"
                android:padding="8dp"
                android:textColor="@color/grey" />

            <EditText
                android:id="@+id/addmarker_description"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/orange_border"
                android:drawablePadding="8dp"
                android:hint="Description"
                android:inputType="text|textMultiLine"
                android:drawableLeft="@drawable/baseline_notes_24"
                android:padding="8dp"
                android:textColor="@color/grey" />
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider"
                android:layout_width="350dp"
                android:layout_height="150dp"
                app:iss_auto_cycle="true"
                app:iss_period="2500"
                app:iss_delay="0"
                />
            <Button
                android:id="@+id/addmarker_uploadImages"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:text="Upload"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/addmarker_cancel"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="8dp"
                android:backgroundTint="@color/orange_200"
                tools:ignore="MissingConstraints" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <Button
                    android:id="@+id/addmarker_add"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:text="Add"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/addmarker_cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="8dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/addmarker_cancel"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#B3ADA6"
                    android:text="Cancel"
                    android:textColor="#3C332E"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="8dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
